<% layout("/layouts/boilerplate") %>
<body>
    <h3>Create new listing</h3>
    <form method="POST" action="/listings">
        title:<input type="text" name="title" placeholder="Enter title">
        <br><br>
        description:
        <textarea name="description" placeholder="enter description" rows="4" cols="60"></textarea>
        <br><br>
        <!-- image[url] ..make image as object and url as key, beacuse that's the schema we defined ... ex: {image:{url: }} -->
        image url: <input type="text" name="image[url]" placeholder="upload image">
        <br><br>
        image filename: <input type="text" name="image[filename]" placeholder="enter image">
        <br><br>
        price: <input type="number" name="price" placeholder="Enter price">
        <br><br>
        location: <input type="text" name="location" placeholder="Enter location">
        <br><br>
        country: <input type="text" name="country" placeholder="Enter country">
        <br><br>
        <button>ADD</button>
    </form>
</body>
